@model IEnumerable<DRueda>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1> Base de Datos DRueda Progreso 1</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Agregar nuevo</a>

    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pagoMatricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsMatriculado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pagoMatricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsMatriculado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


